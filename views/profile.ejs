
<%= include head.ejs %>
	<body>
			<div class="container">
				<h2><%= user.local.email %></h2>
			</div>
			<div class="container">
				<h4>add a new bookmark</h4>
		
				<form class="form-horizontal add-bookmark" action="/bookmark" method="post">
				  <div class="form-group">
				    <label for="inputEmail3" class="col-sm-2 control-label">bookmark name</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" name="bookmarkName" id="bookmark-name" placeholder="bookmark name">
				    </div>
				  </div>
				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">bookmark url</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" name="bookmarkUrl" id="bookmark-url" placeholder="bookmark url">
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default">add</button>
				    </div>
				  </div>

                </form>
			</div>
			<div class="container">
				<h2>my bookmarks</h2>

                <% for(var i=0; i < bookmarks.length; i++) { %>
                    <div><%= bookmarks[i].bookmark.name %></div>
                    <div><%= bookmarks[i].bookmark.url %></div>
                <% } %>

			</div>
	</body>
</html>